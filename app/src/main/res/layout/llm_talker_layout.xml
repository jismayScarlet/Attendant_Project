<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00110F"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ScrollView
        android:id="@+id/editTextScrollView"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:autofillHints="按下enter鍵送出"
        android:background="@android:drawable/editbox_background_normal"
        android:backgroundTint="#26A500BB"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButton">

        <EditText
            android:id="@+id/et_chatBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background_normal"
            android:backgroundTint="#71FF8800"
            android:backgroundTintMode="add"
            android:hint="按下enter鍵送出"
            android:textColor="@color/black"
            android:tooltipText="按下enter鍵送出"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_confireAndSend" />
    </ScrollView>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:drawable/gallery_thumb"
        app:layout_constraintBottom_toTopOf="@+id/imageButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_chatLog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="顯示所有的對話"
            android:textIsSelectable="true"
            app:layout_constraintBottom_toTopOf="@+id/tv_AIMood"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_AIMood"
            app:layout_constraintTop_toTopOf="parent" />
    </ScrollView>

    <Button
        android:id="@+id/btn_confireAndSend"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:autoSizeTextType="uniform"
        android:backgroundTint="#6D2EDE"
        android:backgroundTintMode="add"
        android:text="確認送出"
        android:textColor="#FED60E"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_stopChatAndClear"
        app:layout_constraintEnd_toEndOf="@+id/btn_stopChatAndClear"
        app:strokeColor="#D5009688"
        app:strokeWidth="3sp" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:layout_marginBottom="100dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/yukarikusa" />

    <Button
        android:id="@+id/btn_stopChatAndClear"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:autoSizeTextType="uniform"
        android:backgroundTint="#6D2EDE"
        android:backgroundTintMode="add"
        android:gravity="center"
        android:text="終止對話"
        android:textColor="#FED60E"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:strokeColor="#D5009688"
        app:strokeWidth="3sp" />

    <Button
        android:id="@+id/btn_voiceInput"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:autoSizeTextType="uniform"
        android:backgroundTint="#00A006"
        android:backgroundTintMode="add"
        android:text="語音輸入"
        android:textColor="#FED60E"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_stopChatAndClear"
        app:layout_constraintEnd_toStartOf="@+id/btn_confireAndSend"
        app:strokeColor="#D5009688"
        app:strokeWidth="10sp" />

    <Button
        android:id="@+id/btn_postLog"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:autoSizeMaxTextSize="13sp"
        android:autoSizeTextType="uniform"
        android:backgroundTint="#00A006"
        android:backgroundTintMode="add"
        android:text="內容轉移"
        android:textAlignment="center"
        android:textColor="#FED60E"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_stopChatAndClear"
        app:strokeColor="#D5009688"
        app:strokeWidth="5sp" />

    <CheckBox
        android:id="@+id/cb_tts"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="#5CF19767"
        android:backgroundTintMode="add"
        android:checked="true"
        android:text="回應音聲"
        android:textAlignment="viewStart"
        android:textColor="#FED60E"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_postLog"
        app:layout_constraintEnd_toStartOf="@+id/btn_voiceInput" />

    <CheckBox
        android:id="@+id/cb_longMemery"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="#5CF19767"
        android:backgroundTintMode="add"
        android:checked="true"
        android:text="記憶能力"
        android:textColor="#FED60E"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btn_postLog"
        app:layout_constraintEnd_toStartOf="@+id/btn_postLog" />

</androidx.constraintlayout.widget.ConstraintLayout>