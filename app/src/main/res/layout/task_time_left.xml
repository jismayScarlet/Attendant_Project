<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".time_task.TimeTask">

    <!-- 現在日期時間 -->
    <TextView
        android:id="@+id/tv_current_time"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:gravity="center"
        android:text="現在日期時間"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 目標時間輸入框 -->

    <!-- 距離目標剩餘時間 -->

    <!-- 預設鈴聲按鈕 -->

    <!-- 設定按鈕 -->

    <!-- 獨立鈴聲按鈕 -->

    <TextView
        android:id="@+id/et_target_time"
        android:layout_width="145dp"
        android:layout_height="48dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:hint="未設定目標時間"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_current_time" />

    <TextView
        android:id="@+id/tv_remaining_time"
        android:layout_width="248dp"
        android:layout_height="49dp"

        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:text="距離目標剩餘時間"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/et_target_time"
        app:layout_constraintTop_toBottomOf="@+id/tv_current_time" />

    <Button
        android:id="@+id/btn_default_ringtone"
        android:layout_width="95dp"
        android:layout_height="49dp"
        android:layout_marginStart="4dp"
        android:text="預設鈴聲"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_current_time" />

    <Button
        android:id="@+id/btn_set_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="︿ 目標時間設定按鈕"
        app:layout_constraintTop_toBottomOf="@+id/et_target_time"
        tools:layout_editor_absoluteX="4dp" />

    <Button
        android:id="@+id/btn_custom_ringtone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="獨立鈴聲"
        app:layout_constraintStart_toEndOf="@+id/btn_set_time"
        app:layout_constraintTop_toBottomOf="@+id/et_target_time" />

    <Switch
        android:id="@+id/swt_alarm_set"
        android:layout_width="125dp"
        android:layout_height="48dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        android:showText="true"
        android:text="任務"
        android:textOff="Off"
        android:textOn="On"
        app:layout_constraintStart_toEndOf="@+id/btn_custom_ringtone"
        app:layout_constraintTop_toBottomOf="@+id/et_target_time" />

    <Button
        android:id="@+id/btn_time_restore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="︿使用上次啟動任務時間 xx:xx"
        app:layout_constraintTop_toBottomOf="@+id/btn_set_time"
        tools:layout_editor_absoluteX="4dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
